<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Categoría del módulo -->
        <record id="module_category_reserva_canchas" model="ir.module.category">
            <field name="name">Reserva de Canchas</field>
            <field name="description">Gestión de reservas de canchas deportivas</field>
            <field name="sequence">10</field>
        </record>

        <!-- Grupo: Usuario -->
        <record id="group_reserva_usuario" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_reserva_canchas"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">El usuario puede ver canchas y crear sus propias reservas</field>
        </record>

        <!-- Grupo: Staff -->
        <record id="group_reserva_staff" model="res.groups">
            <field name="name">Staff</field>
            <field name="category_id" ref="module_category_reserva_canchas"/>
            <field name="implied_ids" eval="[(4, ref('group_reserva_usuario'))]"/>
            <field name="comment">El staff puede gestionar todas las reservas</field>
        </record>

        <!-- Grupo: Administrador -->
        <record id="group_reserva_admin" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_reserva_canchas"/>
            <field name="implied_ids" eval="[(4, ref('group_reserva_staff'))]"/>
            <field name="comment">El administrador tiene acceso completo al módulo</field>
        </record>

        <!-- Secuencia para número de reserva -->
        <record id="seq_reserva_reserva" model="ir.sequence">
            <field name="name">Secuencia Reserva</field>
            <field name="code">reserva.reserva</field>
            <field name="prefix">RES</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
        </record>

    </data>
</odoo>