<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Categoría del módulo -->
        <record id="module_category_reserva_canchas" model="ir.module.category">
            <field name="name">Reserva de Canchas</field>
            <field name="description">Gestión de reservas de canchas deportivas</field>
            <field name="sequence">10</field>
        </record>

        <!-- Grupo: Usuario -->
        <record id="group_reserva_usuario" model="res.groups">
            <field name="name">Usuario</field>
            <field name="category_id" ref="module_category_reserva_canchas"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">El usuario puede ver canchas y crear sus propias reservas</field>
        </record>

        <!-- Grupo: Staff -->
        <record id="group_reserva_staff" model="res.groups">
            <field name="name">Staff</field>
            <field name="category_id" ref="module_category_reserva_canchas"/>
            <field name="implied_ids" eval="[(4, ref('group_reserva_usuario'))]"/>
            <field name="comment">El staff puede gestionar todas las reservas</field>
        </record>

        <!-- Grupo: Administrador -->
        <record id="group_reserva_admin" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_reserva_canchas"/>
            <field name="implied_ids" eval="[(4, ref('group_reserva_staff'))]"/>
            <field name="comment">El administrador tiene acceso completo al módulo</field>
        </record>

        <!-- Reglas de registro: Canchas -->
        <record id="reserva_cancha_rule_usuario" model="ir.rule">
            <field name="name">Cancha: Usuario - Solo Lectura</field>
            <field name="model_id" ref="model_reserva_cancha"/>
            <field name="domain_force">[('activa', '=', True)]</field>
            <field name="groups" eval="[(4, ref('group_reserva_usuario'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="reserva_cancha_rule_staff" model="ir.rule">
            <field name="name">Cancha: Staff - Lectura y Edición</field>
            <field name="model_id" ref="model_reserva_cancha"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_reserva_staff'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="reserva_cancha_rule_admin" model="ir.rule">
            <field name="name">Cancha: Admin - Acceso Total</field>
            <field name="model_id" ref="model_reserva_cancha"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_reserva_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Reglas de registro: Reservas -->
        <record id="reserva_reserva_rule_usuario" model="ir.rule">
            <field name="name">Reserva: Usuario - Solo sus reservas</field>
            <field name="model_id" ref="model_reserva_reserva"/>
            <field name="domain_force">[('usuario_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_reserva_usuario'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="reserva_reserva_rule_staff" model="ir.rule">
            <field name="name">Reserva: Staff - Todas las reservas</field>
            <field name="model_id" ref="model_reserva_reserva"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_reserva_staff'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="reserva_reserva_rule_admin" model="ir.rule">
            <field name="name">Reserva: Admin - Acceso Total</field>
            <field name="model_id" ref="model_reserva_reserva"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_reserva_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Secuencia para número de reserva -->
        <record id="seq_reserva_reserva" model="ir.sequence">
            <field name="name">Secuencia Reserva</field>
            <field name="code">reserva.reserva</field>
            <field name="prefix">RES</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
        </record>

    </data>
</odoo>