<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Reglas de registro: Canchas -->
        <record id="reserva_cancha_rule_usuario" model="ir.rule">
            <field name="name">Cancha: Usuario - Solo Lectura</field>
            <field name="model_id" ref="reserva_canchas.model_reserva_cancha"/>
            <field name="domain_force">[('activa', '=', True)]</field>
            <field name="groups" eval="[(4, ref('reserva_canchas.group_reserva_usuario'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

